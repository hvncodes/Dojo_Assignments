@model LoginUser

<h3 class="text-center">Login</h3>
<hr>

<form asp-controller="Home" asp-action="Login" method="POST">
    <div class="form-group">
        <label asp-for="LoginEmail"></label>
        <span class="text-danger font-weight-bold" asp-validation-for="LoginEmail"></span>
        <input class="form-control" asp-for="LoginEmail" value="a@@a">
    </div>

    <div class="form-group">
        <label asp-for="LoginPassword"></label>
        <span class="text-danger font-weight-bold" asp-validation-for="LoginPassword"></span>
        @* prefill value attribute for ease of testing login *@
        <input class="form-control" asp-for="LoginPassword" value="asdfasdf">
    </div>

    <button class="btn btn-outline-success">Login</button>
</form>