@model Product
@{
    ViewData["Title"] = "Products";
}
<p>Products | <a href="/categories">Categories</a></p>
<hr>
<div class="d-flex">
    <div class="col-6">
        <h2 class="text-center">New Product</h2>
        <form asp-controller="Home" asp-action="CreateProduct" method="POST">

            <div class="form-group">
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
                <input asp-for="Name" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger font-weight-bold"></span>
                <input asp-for="Description" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <span asp-validation-for="Price" class="text-danger font-weight-bold"></span>
                <input asp-for="Price" class="form-control">
            </div>

            <button class="btn btn-outline-primary">Create</button>
            
        </form>
    </div>

    <div class="col-6 border-left">
        <h2 class="text-center">Existing Products</h2>
        @foreach (var product in ViewBag.AllProducts)
        {
            <p><a href="/products/@product.ProductId">@product.Name</a></p>
        }
    </div>
</div>